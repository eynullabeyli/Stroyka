                            <div class="mb-3">
                                <label for="contentRUAbout" class="form-label">Kontent RU</label>
                                <textarea class="form-control" id="contentRUAbout" rows="3" name="about_ru_desc_input"></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-3">
                        <button type="submit" class="btn btn-danger btn-block">Yenilə</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
